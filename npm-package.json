{
  "automerge": false,
  "commitMessagePrefix": "chore(deps): ",
  "enabledManagers": ["npm"],
  "extends": [
    "github>jszymanowski/renovate-config#0.1.0",
    "group:recommended",
    "group:monorepos",
    "npm:unpublishSafe",
    "packages:jsUnitTest",
    "packages:linters",
    "packages:react",
    "packages:vite"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["before 5am on tuesday"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@babel/*", "@types/*", "typescript*", "vitest"],
      "automerge": true
    },
    {
      "enabled": false,
      "matchDepTypes": ["peerDependencies"]
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
