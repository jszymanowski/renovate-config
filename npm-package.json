{
  "automerge": false,
  "commitMessagePrefix": "chore(deps): ",
  "enabledManagers": ["npm"],
  "extends": ["local>jszymanowski/renovate-config"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@babel/*", "@types/*", "typescript*", "vitest"],
      "automerge": true
    },
    {
      "enabled": false,
      "matchDepTypes": ["peerDependencies"]
    }
  ]
}
