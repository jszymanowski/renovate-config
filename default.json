{
  "automerge": false,
  "commitMessagePrefix": "chore(deps): ",
  "enabledManagers": ["npm", "dockerfile", "docker-compose"],
  "extends": [
    "config:best-practices",
    "group:recommended",
    "group:monorepos",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "packages:apollographql",
    "packages:linters",
    "packages:react",
    "packages:test",
    "packages:vite"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["before 5am on tuesday"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    },
    {
      "groupName": "motion-dependencies",
      "matchPackageNames": ["framer-motion", "motion"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "*eslint*",
        "prettier",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
