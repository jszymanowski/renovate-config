{
  "automerge": false,
  "commitMessagePrefix": "chore(deps): ",
  "extends": [
    "config:best-practices",
    "group:recommended",
    "group:monorepos",
    "customManagers:biomeVersions",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "packages:apollographql",
    "packages:linters",
    "packages:react",
    "packages:test",
    "packages:vite"
  ],
  "schedule": ["* 0-9 * * 1,5"],
  "timezone": "Asia/Singapore",
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["* 0-9 * * 2"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "motion-dependencies",
      "matchPackageNames": ["framer-motion", "motion"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "/eslint/",
        "prettier",
        "/testing/",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
