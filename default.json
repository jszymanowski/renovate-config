{
  "automerge": false,
  "commitMessagePrefix": "chore(deps): ",
  "enabledManagers": ["docker-compose", "dockerfile", "github-actions", "nodenv", "npm", "nvm"],
  "extends": [
    "config:best-practices",
    "group:recommended",
    "group:monorepos",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "packages:apollographql",
    "packages:linters",
    "packages:react",
    "packages:test",
    "packages:vite"
  ],
  "schedule": ["* 0-4 * * 1-5"],
  "timezone": "Asia/Singapore",
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["* 0-4 * * 2"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    },
    {
      "groupName": "motion-dependencies",
      "matchPackageNames": ["framer-motion", "motion"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "*eslint*",
        "prettier",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
