{
  "enabledManagers": ["npm"],
  "extends": ["local>jszymanowski/renovate-config"],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["before 5am on tuesday"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "*eslint*",
        "prettier",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    },
    {
      "groupName": "svelte-dependencies",
      "matchPackageNames": ["/^svelte/"]
    },
    { "matchCategories": ["docker"], "enabled": true }
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20
}
