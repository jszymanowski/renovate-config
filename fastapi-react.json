{
  "automerge": false,
  "commitMessagePrefix": "{{#if isMajor}}🚨 {{else}}⬆️ {{/if}}",
  "commitMessageAction": "Update",
  "commitMessageTopic": "{{{depName}}}",
  "commitMessageExtra": "from {{currentValue}} to {{newValue}}",
  "enabledManagers": ["npm", "poetry"],
  "extends": [
    "github>jszymanowski/renovate-config#0.1.0",
    "group:recommended",
    "group:monorepos",
    "npm:unpublishSafe",
    "packages:apollographql",
    "packages:eslint",
    "packages:jsTest",
    "packages:linters",
    "packages:react",
    "packages:tslint",
    "packages:vite"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["before 5am on tuesday"],
    "automerge": true
  },
  "packageRules": [
    { "matchManagers": "npm", "constraints": { "yarn": "4.7.0" } },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "/eslint/",
        "prettier",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    },
    { "matchCategories": ["docker"], "enabled": true },
    {
      "groupName": "fastapi-core-dependencies",
      "matchPackageNames": ["/^fastapi/", "/^pydantic/", "/^starlette/"]
    },
    {
      "groupName": "strawberry-graphql-dependencies",
      "matchPackageNames": ["/^strawberry-graphql/", "/^graphql/"]
    }
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20
}
