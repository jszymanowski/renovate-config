{
  "automerge": false,
  "enabledManagers": ["npm", "poetry"],
  "extends": ["local>jszymanowski/renovate-config"],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["before 5am on tuesday"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@babel/*", "@types/*", "typescript*", "vitest"],
      "automerge": true
    },
    { "matchCategories": ["docker"], "enabled": true },
    {
      "groupName": "motion-dependencies",
      "matchPackageNames": ["framer-motion", "motion"]
    },
    {
      "groupName": "fastapi-core-dependencies",
      "matchPackageNames": ["/^fastapi/", "/^pydantic/", "/^starlette/"]
    },
    {
      "groupName": "strawberry-graphql-dependencies",
      "matchPackageNames": ["/^strawberry-graphql/", "/^graphql/"]
    }
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20
}
